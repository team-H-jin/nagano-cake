<div class="container">
  <br><h4>　　<u>注文履歴詳細</u></h4><br>
  <div class="row">
    <div class="col-lg-7">
      <strong>注文情報</strong>
      <table class="table table-bordered">
        <tr>
          <td>注文日</td>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
          <td>配送先</td>
          <td>
            〒<%= @order.postcode %><br>
    		    <%= @order.address %><br>
    		    <%= @order.name %>
    		  </td>
    		<tr>
    		  <td>支払方法</td>
    		  <td><%= @order.payment_method_i18n %></td>
    		</tr>
          <td>ステータス</td>
          <td><%= @order.status_i18n %></td>
        </tr>
      </table>
      <strong>注文内容</strong>
      <table class="table table-bordered">
        <tr>
          <td>商品</td>
          <td>単価（税込）</td>
          <td>個数</td>
          <td>小計</td>
        </tr>
        <% @order.order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.item.add_tax_price %></td>
          <td><%= order_detail.quantity %></td>
          <td>
            <%= order_detail.item.add_tax_price * order_detail.quantity %></td>
        </tr>
        <% end %>
      </table>
    </div>
    <div class="col-lg-5">
      <strong>請求情報</strong>
      <table class="table table-bordered">
        <tr>
          <td>商品合計</td>
          <td><%= @sum %></td>
        </tr>
          <td>配送料</td>
          <td><%= @postage %></td>
    		</tr>
          <td>ご請求額</td>
          <td><%= @total %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-10">
      <br><h4>　　<u>注文一覧</u></h4><br>
      注文情報
      <table class="table table-bordered">
        <tr>
          <td>注文日</td>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
          <td>配送先</td>
          <td>
            〒<%= order.posecode %><br>
    		    <%= order.address %><br>
    		    <%= order.name %>
    		  </td>
    		<tr>
    		  <td>支払方法</td>
    		  <td><%= order.payment_method %></td>
    		</tr>
          <td>ステータス</td>
          <td><%= order.status %></td>
        </tr>
      </table>

      注文情報
      <table class="table table-bordered">
        <tr>
          <td>商品合計</td>
          <td><%= @subtotal.add_tax_price.to_s(:dalimited) %></td>
        </tr>
          <td>配送料</td>
          <td>800</td>
    		</tr>
          <td>ご請求額</td>
          <td><%= @total.add_tax_price.to_s(:dalimited) %></td>
        </tr>
      </table><br><br>

      <table>
        <tr>
          <td>商品</td>
          <td>単価（税込）</td>
          <td>個数</td>
          <td>小計</td>
        </tr>
        <tr>
          <% @order.each do |order| %>
          <td><%= order_item_name %></td>
          <td><%= order.item.add_tax_price.to_s(:dalimited) %></td>
          <td><%= order_item.quantity %></td>
          <td><%= order.item.add_tax_price.to_s(:dalimited) * order_item.quantity %></td>
        <% end %>
        </tr>
      </table>
    </div>
    <div class="col-lg-1"></div>
  </div>
</div>
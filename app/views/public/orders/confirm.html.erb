<h4>注文情報確認</h4>

<table class="table bordered">
  <thead>
    <th>商品名</th>
    <th>単価（税込）</th>
    <th>数量</th>
    <th>小計</th>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td>
        <%= image_tag cart_item.item.image, size:'250x250' %>
        <%= cart_item.item.name %>
      </td>
      <td><%= cart_item.item.add_tax_price%></td>
      <td><%= cart_item.item.quantity%></td>
      <td><%= cart_item.subtotal%></td>
    </tr>
  </tbody>
</table>

<table class="table bordered">
  <tr>
    <th>送料</th>
    <td>800</td>
  </tr>
  <tr>
    <th>商品合計</th>
    <td><%= cart_item.gross %></td>
  </tr>
  <tr>
    <th>請求金額</th>
    <td><%= @total.round.to_s(:delimited) %></td>
  </tr>
</table>
<% end %>

<div class="payment_method">
  <h4><strong>支払方法</strong></h4></br>
  <p><%= @order.payment_method %></p>
</div>

<div class="address">
  <h4><strong>お届け先</strong></h4></br>
  <p><%= @order.postcode %><%= @order.address %></p></br>
  <p><%= @order.name %></p>
</div>

<%= form_with model: @order, url:orders_path, method: :post do |f| %>
  <%= f.submit "注文を確定する",class:"btn btn-primary" %>
<% end %>

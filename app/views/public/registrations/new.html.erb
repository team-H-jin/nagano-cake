<div class="container">
  <div class="row">
    <div class="col-auto mx-auto">
      <h4>新規会員登録</h4>
   
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
   
      <div class="register_form">
        <div class="kanji_name_field">
          <%= f.label :名前　　　　　　　　　　（姓）　%><%= f.text_field :last_name, autofocus: true %>
          <%= f.label :　　（名）　 %><%= f.text_field :first_name, autofocus: true %>
        </div><br>
        <div class="kana_name_field">
          <%= f.label :フリガナ　　　　　　　　（セイ） %><%= f.text_field :last_name_kana, autofocus: true %>
          <%= f.label :　　（メイ） %><%= f.text_field :first_name_kana, autofocus: true %>
        </div><br>
        <div class="email_field">
          <%= f.label :メールアドレス　　　　　　　　　 %><%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div><br>
        <div class="postcode_field">
          <%= f.label :郵便番号（ハイフンなし）　　　　 %><%= f.text_field :postcode, autofocus: true %>
        </div><br>
        <div class="address_field">
          <%= f.label :住所　　　　　　　　　　　　　　 %><%= f.text_field :address, autofocus: true %>
        </div><br>
        <div class="phone_number_field">
          <%= f.label :電話番号（ハイフンなし）　　　　 %><%= f.text_field :phone_number, autofocus: true %>
        </div><br>
        <div class="password_field">
          <%= f.label :パスワード（６文字以上）　　　　 %>
          <%= f.password_field :password, autocomplete: "new-password" %><br>
          <%= f.label :パスワード（確認用）　　　　　　 %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div><br>
        <div class="text-center">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      </div>
      <% end %>
   
      <h4>既に登録済みの方</h4>

      <%= link_to "こちら", new_customer_session_path %>
      <span> からログインしてください。</span>
    </div>
  </div>
</div>
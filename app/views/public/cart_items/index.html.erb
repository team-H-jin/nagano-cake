<table class="table-bordered"> 
  <thead>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
  </thead>
  <tbody>
  <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.item_name %></td>
        <td><%= cart_item.item.with_tax_price%></td>
        <td>
          <%= form_with model: @cart_item, method: :patch, do |f| %>
            <%= f.number_field :quantity, min: 1, max: 100 %>
						<%= f.submit "変更" %>
					<% end %>
        </td>
        <td><%= cart_item.subtotal%></td>
        <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<table class="table bordered">
  <tr>
    <th>合計金額</th>
    <td><%= @sum %></td>
  </tr>
</table>


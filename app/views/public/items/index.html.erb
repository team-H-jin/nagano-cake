<div class="container">
    <div class="row">
        <div class="col-sm-3 p-20">
          <table class="table table-bordered">
            <tr><th>ジャンル検索</th></tr>
            <% @genres.each do |genre| %>
            <tr><td><%= link_to genre.name,genre_path(genre) %></td></tr>
            <% end %>
          </table>
        </div>
        
        <div class="col-sm-9">
            <h2>商品一覧</h2><p class="text-right">[全<%= @items.count %>件]</p>
            <!--商品詳細をここにeachで並べる-->
            <div class="item-wrap row">
            <% @items.each do |item| %>
             <div class="item-box col-lg-3">
                <div><%= image_tag item.image, size: "200x200" %></div>
                <div><%= link_to item.name, item_path(item.id) %></div>
                <div>¥<%= item.price %></div>
            </div>
            <% end %>
            <%= paginate @items %>
             
            </div>
        </div>
    </div>
</div>
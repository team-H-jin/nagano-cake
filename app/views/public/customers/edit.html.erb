<div class="container">
  <div class="row">
    <div class="col-auto mx-auto">
      <h4>会員情報編集</h4>
   
      <%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>

      <div class="edit_form">
        <div class="kanji_name_field">
          <%= f.label :名前　　　　　　　　　　　　　　%><%= f.text_field :last_name, autofocus: true %>
          <%= f.label :　　　 %><%= f.text_field :first_name, autofocus: true %>
        </div><br>
        <div class="kana_name_field">
          <%= f.label :フリガナ　　　　　　　　　　　　%><%= f.text_field :last_name_kana, autofocus: true %>
          <%= f.label :　　　 %><%= f.text_field :first_name_kana, autofocus: true %>
        </div><br>
        <div class="postcode_field">
          <%= f.label :郵便番号　　　　　　　　　　　　%><%= f.text_field :postcode, autofocus: true %>
        </div><br>
        <div class="address_field">
          <%= f.label :住所　　　　　　　　　　　　　　%><%= f.text_field :address, autofocus: true %>
        </div><br>
        <div class="phone_number_field">
          <%= f.label :電話番号　　　　　　　　　　　　%><%= f.text_field :phone_number, autofocus: true %>
        </div><br>
        <div class="email_field">
          <%= f.label :メールアドレス　　　　　　　　　%><%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div><br>

        <div class="col-auto mx-auto">
          <%= f.submit "編集内容を保存", class: "btn btn-success" %>
          <%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger" %>
        </div>
       </div>
       <% end %>
		</div>
	</div>
</div>

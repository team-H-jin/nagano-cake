<div class="container">
  <div class="row">
     <h4>マイページ</h4>
     <div class="col">
      <h5><strong>登録情報</strong></h5>
      <span><%= link_to "編集する", edit_customer_registration_path(@customer), class: "btn btn-success" %></span>
      <table class="table-bordered">
        <tr>
          <th>氏名</th>
          <td><%= current_customer.last_name %><%= current_customer.first_name %></td>
        </tr>
        <tr>
          <th>カナ</th>
          <td><%= current_customer.last_name_kana %><%= current_customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= current_customer.postcode %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= current_customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= current_customer.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= current_customer.email %></td>
        </tr>
      </table>
      <h5><strong>配送先</strong></h5><%= link_to "一覧を見る", addresses_path(@customer), class: "btn btn-primary" %>
      <h5><strong>注文履歴</strong></h5><%= link_to "一覧を見る", orders_path(@customer), class: "btn btn-primary" %>
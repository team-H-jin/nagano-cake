<div class="container">
  <div class="row">
    <div class="col">
      <h5 class="text-left"><strong>ログイン</strong></h5>
      
      <p class="text-le"><strong>会員の方はこちらからログイン</strong></p>
      
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
      <div class="text-center">
        <%= f.label :メールアドレス　　　 %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 40 %>
      </div>

      <div class="text-center">
        <%= f.label :パスワード　　　　　 %>
        <%= f.password_field :password, autocomplete: "current-password", size: 40 %>
      </div>
  
        <div class="text-center">
          <%= f.submit "ログイン", class:"btn btn-primary rounded-pill" %>
        </div>



    <div class="col-auto mr-auto">
        <div class="actions">
          <p><strong>会員登録がお済みでない方</strong></p>
          
          <p class="text-center"><%= link_to "こちら", new_registration_path(resource_name) %>から新規登録を行なってください。</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
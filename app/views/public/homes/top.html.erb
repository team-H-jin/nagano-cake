<div class="container">
    <div class="row">
        <div class="col-lg-3">
            <h4></h4>
            </div>
            
        <div class="col-lg-9">
         <div class="parent">
           <%= image_tag 'images (3).jpeg', size: "500x300" %>
    　　</div>
            <!--bootstrap 反応しない-->
         <div class="card" style="max-width: 400px;">
         <img class="card-img" src="reserve.png" alt="">
          <div class="card-img-overlay">
         <p class="text-white">ここにテキストが入ります。</p>
          </div>
         </div>
         
         <h4>新着商品</h4>
         <div class="flex">
             <tbody>
             <% @items.each do |item| %>
              <tr>
             <div class="item-box">
                <td><%= image_tag item.image, size: "200x200" %></td>
                <td><%= link_to item.name, admin_item_path(item.id) %></td>
                <td>¥<%= item.price %>-</td>
              </tr>
                 <% end %>
            </tbody>
                 
             </div>     
          </div>
        </div>
    </div>
</div>
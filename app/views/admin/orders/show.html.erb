<div class="container">
 <div class="row">
  <div class="col-lg-8">
   <h4><span class="bg-primary">注文履歴詳細</span></h4>
    <table>
     <tr>
      <td>購入者</td>
      <td>　　　　　　<%= link_to @order.customer.full_name,admin_customer_path(@order.customer) %></td>
     </tr>
     <tr>
      <td>注文日</td>
      <td>　　　　　　<%= @order.created_at.strftime('%Y/%m/%d')  %></td>
     </tr>
     <tr>
       <td>配送先</td>
       <td>　　　　　　<%= @order.address %></td>
     <tr>
     </tr>
     <tr>
       <td>支払方法</td>
       <td>　　　　　　<%= @order.payment_method %></td>
     </tr>
     <tr>
      <td>注文ステータス</td>
      <td>　　　　　　　<%= @order.status %></td>
     </tr>
    </table>

    <table cellspacing="10">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
        </tr>
      </thead>
      <tbody>
       <% @order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.item.add_tax_price %></td>
          <td><%= order_detail.quantity %></td>
          <td><%= order_detail.item.add_tax_price * order_detail.quantity %></td>
          <td>
           <%= form_with model: [:admin, order_detail], method: :patch do |f| %>
           <%= f.select :status, OrderDetail.statuses.keys.map {|k| [I18n.t("enums.order_detail.status.#{k}"), k]} %>
         　<%= f.submit "更新", class:"btn btn-success" %>
           <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
    <div class="col-lg-4">
     <table class='table under'>
        <tr>
          <th>商品合計</th>
          <td><%= @subtotal.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th>送料</th>
          <td><%= @postage %></td>
        </tr>
        <tr>
          <th>請求合計金額</th>
          <td><%= @total %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
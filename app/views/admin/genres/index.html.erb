
<div class='container px-5 px-sm-0'>
  <div class='row'>
   <div class='mx-auto'>
   <h4 class='bg-dark text-light'>ジャンル一覧・追加</h4></br>
   <div class='row'>
    <%= form_with model: [:admin,@genre] do |f| %>
     ジャンル名　　
    <%= f.text_field :name, placeholder:"ジャンル名" %>　　
    <%= f.submit '新規登録', class: 'btn btn-success rounded-pill' %>
    <% end %>
    </div></br>
    <table class='table table-hover table-inverse'>
     <thead class='thead-dark'>
      <tr>
       <th>ジャンル</th>
      </tr>
     </thead>
     <tbody>
      <% @genres.each do |genre| %>
       <tr>
        <td><%= genre.name %></td>
        <td>　　</td>
        <td><%= link_to '編集する', edit_admin_genre_path(genre), class: 'btn btn-success rounded-pill'%></td>
        <td><%= link_to '削除', [:admin,genre], method: :delete, class: "btn btn-sm btn-danger rounded-pill"%></td>
       <% end %>
       </tr>
     </tbody>
    </table>
   </div> 
  </div>
 </div> 




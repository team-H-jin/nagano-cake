<div class='container px-5 px-sm-0'>
  <div class='row'>
   <div class='col-md-1'></div>
   <div class='col-md-11'>
    <h4 class="bg-primary"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h4>
   </div>  
     <table>
      <tr>
       <td>会員ID</td>
       <td>　　　　　<%= @customer.id %></td>
      </tr>
      <tr>
       <td>氏名</td>
       <td>　　　　　<%= @customer.last_name %>　<%= @customer.first_name %></td>
      </tr>
      <tr>
       <td>フリガナ</td>
       <td>　　　　　<%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
      </tr>
      <tr> 
       <td>郵便番号</td>
       <td>　　　　　<%= @customer.postcode %></td>
      </tr>
      <tr>
       <td>住所</td>
       <td>　　　　　<%= @customer.address %></td>
      </tr>
      <tr>
       <td>電話番号</td>
       <td>　　　　　<%= @customer.phone_number %></td>
      </tr>
      <tr>
       <td>メールアドレス</td>
       <td>　　　　　<%= @customer.email %></td>
      </tr>
      <tr>
       <td>会員ステータス</td>
        <% if @customer.is_deleted == false %>
  	    	<td class="text-success">　　　　　　有効</td>
  	     <% else %>
  	    	<td class="text-secondary">　　　　　退会</td>
  	     <% end %>
      </tr>
      <tr>
       <td><%= link_to '編集する', edit_admin_customer_path(@customer), class: "btn btn-sm btn-success" %></td>
       <td><%= link_to '注文履歴一覧を見る', admin_orders_path, class: 'btn btn-sm btn-primary' %></td>
      </tr>
     </table> 
  </div>
 </div> 
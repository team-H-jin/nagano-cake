 <div class='container px-5 px-sm-0'>
  <div class='row'>
   <div class='col-md-2'><h4>会員一覧</h4></div>
   <div class='col-md-8'>
     <table class='table table-hover table-inverse'>
    <thead>
     <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
     </tr> 
    </thead>    
    <tbody>
    <% @customers.each do |customer| %>
     <tr>
      <td><%= customer.id %></td> 
      <td><%= link_to admin_customer_path(customer.id) do %><%= customer.last_name %><%= customer.first_name %><% end %></td>
      <td><%= customer.email %></td>
      <td><% if customer.is_deleted == false %>
  		   <p class="text-success">有効</p>
  	       <% else %>
  		   <p class="text-secondary">退会</p>
  	       <% end %></td>
          <% end %>
     </tr>
     <tr>
      <td></td>
      <td></td>
      <td><%= paginate @customers %></td>
     </tr> 
    </tbody> 
   </table>
  </div> 
  <div class='col-md-2'></div>
 </div>
</div>   
    

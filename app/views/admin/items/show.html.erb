<div class="container">
  <div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-3">
      <h4><span class="bg-primary">商品詳細</span></h4>
      <%= image_tag @item.image, size:'250x250' %>
    </div>
    <div class="col-lg-7"><br><br>
      <table>
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格<br>（税抜価格）</td>
          <td><%= @item.add_tax_price.to_s(:dalimited) %>（<%= @item.price %>）円</td>
        </tr>
        <tr>
          <td>販売ステータス　</td>
          <td>
            <% if @item.status == true %>
      					<p class="text-success">販売中</p>
      			<% else %>
      					<p class="text-secondary">販売停止中</p>
      			<% end %>
      		</td>
        </tr>
          <td></td>
          <td><%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-sm btn-success" %></td>
        </tr>
      </table>
    </div>
    <div class="col-lg-1"></div>
  </div>
</div>
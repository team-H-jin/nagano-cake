 <div class='container px-5 px-sm-0'>
  <div class='row'>
   <div class='col-md-2'><u><h4>注文履歴一覧</h4></u></div>
   <div class='col-md-8'>
   <table class='table table-hover table-inverse'>
    <thead>
     <tr class="table-info">
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
     </tr>
    </thead>
    <tbody><% @orders.each do |order| %>
     <tr>
      <td><%= link_to order.created_at.strftime('%Y/%m/%d  %H:%M:%S'), admin_order_path(order.id) %></td>
      <td><%= order.customer.full_name %></td>
      <td><%= order.order_details.sum(:quantity) %></td>
      <td><%= order.status_i18n %></td>
          <% end %>
      </tr>
      <tr>
       <td></td>
       <td></td>
       <td><%= paginate @orders %></td>
      </tr> 
     </tbody> 
    </table>
   </div> 
   <div class='col-md-2'></div>
  </div>
 </div>   
    
